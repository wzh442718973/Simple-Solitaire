<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/headersTask"
    card_view:cardCornerRadius="2dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:text="Version"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold" />
<LinearLayout
android:layout_width="0dp"
android:visibility="gone"
android:background="#2C8151"
android:layout_height="0dp"
android:orientation="vertical">
</LinearLayout>

            <TextView
                android:id="@+id/changelog_card_view_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold" />
<EditText
android:hint="qcelpdataDocumentationOverridden"
android:layout_width="0dp"
android:textColor="#879AC0"
android:lines="2"
android:text="tuplesDiscoverAvstring"
android:layout_height="0dp"
android:textSize="13sp"
android:visibility="gone"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@android:color/darker_gray" />
<TextView
android:textSize="31sp"
android:lines="8"
android:gravity="center_vertical"
android:background="#26FEE3"
android:layout_height="0dp"
android:layout_width="0dp"
android:textColor="#CAD615"/>


        <TextView
            android:id="@+id/changelog_card_view_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="6dp" />
<View
android:visibility="invisible"
android:paddingLeft="59dp"
android:layout_width="0dp"
android:layout_height="0dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>